{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/**/*.json", "types/**/*"],
  "exclude": ["node_modules"],
  "baseUrl": ".",
  "paths": {
    "*": ["node_modules/*", "types/*"]
  }
}
